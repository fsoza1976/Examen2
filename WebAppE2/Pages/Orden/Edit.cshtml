@page
@model WebAppE2.Pages.Orden.EditModel
@{
}

<div id="AppEdit" class="container-fluid" data-entity="@JsonSerializer.Serialize(Model.Entity)" v-cloak>

    <div class="card">
        <div class="card-header">
            @(Model.id.HasValue? "Actualizar Producto" : "Nueva Orden")
        </div>
        <div class="card-body">
            <form id="FormEdit" method="post">
                <input type="hidden" asp-for="Entity.IdOrden" v-model="Entity.IdOrden" />

                <div class="form-group mb-3">
                    <label for="Entity.NombreProducto" class="form-label">Producto</label>
                    <select asp-for="Entity.IdProducto" class="form-select" v-model="Entity.IdProducto"
                            asp-items="@(new SelectList(Model.Lista, "IdProducto", "NombreProducto"))" required>
                    </select>
                </div>
                <div class="form-group mb-3">
                    <label for="Entity.CantidadProducto" class="form-label">Cantidad</label>
                    <input type="number" class="form-control" asp-for="Entity.CantidadProducto" maxlength="250" v-model="Entity.CantidadProducto" required>
                </div>
                <div class="form-group mb-3">
                    <label for="Entity.Estado" class="form-label">Estado</label>
                    <input type="checkbox" class="form-check-input" asp-for="Entity.Estado" v-model="Entity.Estado" />
                </div>

                <div class="row">
                    <div class="col-4">
                        <button type="button" @@click="Save" class="btn btn-primary">
                            @(Model.id.HasValue? "Actualizar" : "Agregar")
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts
{
    <script defer src="~/App/Orden/Edit.js"></script>
}
